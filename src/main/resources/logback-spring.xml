<configuration>
     <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
         <encoder>
             <charset>UTF-8</charset>
             <pattern>%msg%n</pattern>
         </encoder>
     </appender>

     <!-- Niveau global -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="com.pokemon.company.pokemon_joute.config.StartupListener" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="com.pokemon.company.pokemon_joute.service.AttaqueService" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <!-- DÃ©sactiver les logs pour la classe Attaque -->
    <logger name="com.pokemon.company.pokemon_joute.model" level="INFO" />
    <logger name="com.pokemon.company.pokemon_joute.service" level="INFO" />

    <!-- Niveau Hibernate -->
    <logger name="org.hibernate" level="ERROR" />
</configuration>
